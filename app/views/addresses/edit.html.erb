<%= form_with model: @address, url: address_path(@address) do |f| %>
　<div class="field">
    <%= f.label :postal_code, "郵便番号" "(ハイフンなし)" %><br/>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %><br/>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>
  <div class="field">
　  <%= f.label :name, "宛名" %>
　  <%= f.text_field :name, autofocus: true %>
　</div>

  <div class="actions">
    <%= f.submit "編集内容を保存する" %>
</div>
  <% end %>