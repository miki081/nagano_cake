<h2>Edit <%= resource_name.to_s.humanize %></h2>
<div class="container">
  <h1 class="form-title">会員情報編集</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 form-wrapper">
<%= form_for(resource, as: resource_name, url: _path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
　  <%= f.label :first_name, "氏名" %>
　  <%= f.text_field :first_name, autofocus: true %>
　  <%= f.text_field :last_name, autofocus: true %>
　</div>
　<div class="field">
　  <%= f.label :first_name_kana, "フリガナ"%>
　  <%= f.text_field :first_name_kana, autofocus: true %>

　  <%= f.text_field :last_name_kana, autofocus: true %>
　</div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
   <div class="field">
    <%= f.label :address, "住所" %><br/>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :telephone_number, "電話番号" "(ハイフンなし)" %><br/>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

    <div class="actions">
    <%= f.submit "変更する" %>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
