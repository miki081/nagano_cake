<h2>新規会員登録</h2>
 <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
　<div class="field">
　  <p>
　  <%= f.label :first_name, "名前" "(性)" %>
　  <%= f.text_field :first_name, autofocus: true %>

　  <%= f.label :last_name, "(名)" %>
　  <%= f.text_field :last_name, autofocus: true %>
　</div>
　<div class="field">
　  <%= f.label :first_name_kana, "フリガナ" "(セイ)" %>
　  <%= f.text_field :first_name_kana, autofocus: true %>

　  <%= f.label :last_name_kana, "(メイ)" %>
　  <%= f.text_field :last_name_kana, autofocus: true %>
　</div>

　<div class="field">
    <%= f.label :email %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

　<div class="field">
    <%= f.label :postal_code, "郵便番号" "(ハイフンなし)" %><br/>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %><br/>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :telephone_number, "電話番号" "(ハイフンなし)" %><br/>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
 <% end %>

<br>既に登録済みの方</br>
<br><%= link_to "こちら" , new_customer_session_path %>からログインしてください</br>





