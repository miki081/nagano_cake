 <div class='container'>
   <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h3>新規商品登録</h3>
<%= form_with model:  @item, url: admins_items_path, local: true do |f| %>

  <div class="form-group">
	<%= f.attachment_field :image, class: "image_id" %>
  </div>

  <div class="form-group">
  <%= f.label :商品名 %>
  <%= f.text_field :name %>
  </div>

  <div class="form-group">
  <%= f.label :商品説明 %>
  <%= f.text_area :introduction, size: "40x5", :maxlength => 200, class: "introduction" %>
  </div>

  <div class="form-group row">
    <%= f.label :ジャンル, class: "col-sm-4" %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, class: "form-control col-sm-8" %>
  </div>

  <div class="form-group">
  <%= f.label :税抜価格 %>
  <%= f.text_field :price %>　円
  </div>

  <div class="form-group row">
          <%= f.label :販売ステータス, class: "col-sm-4" %>
          <%= f.select :sale_status, [["販売可", "販売可"], ["販売不可","販売不可"]], class: "form-control col-sm-8" %>
   </div>
 </div>


  <div class="form-group">
   <button class="btn btn-success">新規登録</button>
  </div>

<% end %>
</div>
