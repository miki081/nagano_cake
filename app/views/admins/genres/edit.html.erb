<div class="container my-5">
  <div class="row">
    <h2>ジャンル編集画面</h2>
  </div>
<div class="row my-3 d-flex justify-content-center">
    <% if flash[:genre_updated] %>
      <span class="text-danger"><%= flash[:genre_updated] %></span>
    <% end %>
  </div>
  <%= form_with model: @genre, url: admins_genre_path, local: true do |f| %>
  <div class="form-group">
   <label for="genre_name">ジャンル名</label>
   <%= f.text_field :name, class: "form-control" %>
  </div>
  
  <div class="form-check">
        <%= f.radio_button :is_enabled, :true %>
        <%= f.label :is_enabled, "有効" %>
        <%= f.radio_button :is_enabled, :false %>
        <%= f.label :is_enabled, "無効" %>
  </div>
  <div class="row">
   <%= f.submit '内容を変更', class: "btn btn-primary mx-auto mt-3" %>
  </div>
<% end %>
</div>
</div>
