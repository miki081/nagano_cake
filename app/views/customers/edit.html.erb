 <%= form_with model: @customer, url: edit_customer_path do |f| %>
　<div class="field">
　  <%= f.label :first_name, "氏名" %>
　  <%= f.text_field :first_name, autofocus: true %>

　 
　  <%= f.text_field :last_name, autofocus: true %>
　</div>
　<div class="field">
　  <%= f.label :first_name_kana, "フリガナ"%>
　  <%= f.text_field :first_name_kana, autofocus: true %>

　  <%= f.text_field :last_name_kana, autofocus: true %>
　</div>

　<div class="field">
    <%= f.label :postal_code, "郵便番号" "(ハイフンなし)" %><br/>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %><br/>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :telephone_number, "電話番号" "(ハイフンなし)" %><br/>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

  <div class="field">
    <%= f.label :email %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存" %>
  </div>
<% end %>